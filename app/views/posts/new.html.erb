<h1>New Post</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines for posts</p>
    <ul>
      <li>Don't be boring</li>
      <li>Be respectful to others</li>
      <li>No spam please, or you'll be kicked out</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @post do |f| %>

      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>

      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter post body" %>
      </div>

      <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-success'%>
      </div>
    <% end %>
  </div>
</div>
