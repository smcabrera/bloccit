<h1><%= markdown @post.title %></h1>

<div class="row">
  <div class="col-md-8">
    <small>
       <%=image_tag(@post.user.avatar.tiny.url) if @post.user.avatar?  %>
       submitted <%= time_ago_in_words(@post.created_at) %> ago by
       <%= @post.user.name %>
    </small>
    <p><%= markdown @post.body %></p>
    <% if @post.image? %>
       <%= image_tag( @post.image )  %>
     <% end %>
  </div>

  <div class="col-md-4">
    <% if policy(@post).edit? %>
      <%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    <h3>Comments</h3>
    <%= render partial: 'comments', locals: { topic: @topic, post: @post, comments: @comments } %>
  </div>
</div>





